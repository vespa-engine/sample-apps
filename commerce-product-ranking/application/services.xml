<services version="1.0" xmlns:deploy="vespa" xmlns:preprocess="properties">
   
    <container id="default" version="1.0">
        <document-api/>
        <search/>
        <nodes count="1"/>
        <component id="tokenizer" class="com.yahoo.language.wordpiece.WordPieceEmbedder" bundle="linguistics-components">
          <config name="language.wordpiece.word-piece">
            <model>
              <item>
                <language>unknown</language>
                <path>files/bert-base-uncased-vocab.txt</path>
              </item>
            </model>
          </config>
        </component>
        <component id="transformer" class="ai.vespa.embedding.BertBaseEmbedder" bundle="model-integration">
          <config name="embedding.bert-base-embedder">
            <transformerModel  url="https://data.vespa.oath.cloud/onnx_models/sentence_all_MiniLM_L6_v2.onnx"/>
            <tokenizerVocab url="https://data.vespa.oath.cloud/onnx_models/bert-base-uncased-vocab.txt"/>
          </config>
        </component>
    </container>

    <content id="content" version="1.0">
        <redundancy>2</redundancy>
        <documents>
            <document type="product" mode="index" />
        </documents>
        <nodes count="1"/>
        <engine>
          <proton>
            <tuning>
              <searchnode>
                <requestthreads>
                  <persearch>8</persearch>
                </requestthreads>
              </searchnode>
            </tuning>
          </proton>
        </engine>
    </content>
</services>
