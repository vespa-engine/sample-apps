schema blog_post {

    document blog_post {

        field title type string {
            indexing: summary | index
        }

        field content type raw {
            indexing: summary
        }

    }


    fieldset default {
        fields: title, content
    }


    rank-profile post inherits default {

        first-phase {
            expression:nativeRank(title)
        }

    }

}
