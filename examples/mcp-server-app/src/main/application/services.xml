<services version="1.0" xmlns:deploy="vespa" xmlns:preprocess="properties">
    <container id="default" version="1.0">
            <handler id="ai.vespa.mcp.McpJdiscHandler" bundle="mcp">
            <binding>http://*/mcp/*</binding>
        </handler>
        <component id="ai.vespa.mcp.App" bundle="mcp" />
        <component id="ai.vespa.mcp.VespaTools" bundle="mcp" />
        <document-api/>
        <search/>
        <nodes count="1"/>
    </container>

    <content id="content" version="1.0">
        <min-redundancy>1</min-redundancy>
        <documents>
            <document type="candidate_matching" mode="index"/>
            <document type="job" mode="index" />
            <document type="candidate" mode="index"/>
        </documents>
        <nodes count="1"/>
    </content>

</services>