schema article {
    document article {
        field title type string {
            indexing: index | summary
            index: enable-bm25
        }

        field body type string {
            indexing: index | summary
            index: enable-bm25
        }
    }

    fieldset default {
        fields: title, body
    }

    rank-profile default {
        first-phase {
            expression: nativeRank(title, body)
        }
    }
}
