<services version="1.0" xmlns:deploy="vespa" xmlns:preprocess="properties">

  <container id='default' version='1.0'>
    <nodes>
      <node hostalias="node1" />
    </nodes>

    <component id="com.yahoo.language.wordpiece.WordPieceEmbedder" bundle="linguistics-components">
      <config name="language.wordpiece.word-piece">
        <model>
          <item>
            <language>unknown</language>
            <path>files/bert-base-uncased-vocab.txt</path>
          </item>
        </model>
      </config>
    </component>

    <component id="ai.vespa.tokenizer.BertTokenizer" bundle="dense-passage-retrieval-with-ann">
      <config name="ai.vespa.tokenizer.bert-model">
        <max_input>256</max_input>
        <vocabulary>files/bert-base-uncased-vocab.txt</vocabulary>
      </config>
    </component>

    <document-processing>
      <chain id="bert-tensorizer" inherits="indexing">
        <documentprocessor id="ai.vespa.processor.QADocumentProcessor" bundle="dense-passage-retrieval-with-ann"/>
      </chain>
    </document-processing>

    <model-evaluation/>
    <search>
      <chain id="qa" inherits="vespa">
        <searcher id="ai.vespa.searcher.RetrieveModelSearcher" bundle="dense-passage-retrieval-with-ann"/>
        <searcher id="ai.vespa.searcher.QASearcher" bundle="dense-passage-retrieval-with-ann"/>
      </chain>
    </search>
    <document-api/>

    <handler id="ai.vespa.frontend.FrontendHandler" bundle="dense-passage-retrieval-with-ann">
      <binding>http://*/frontend/*</binding>
    </handler>

  </container>

  <content id='wikipedia' version='1.0'>
    <search>
      <visibility-delay>1</visibility-delay>
    </search>
    <redundancy>2</redundancy>
    <documents>
      <document mode='index' type='wiki'/>
      <document-processing cluster="default" chain="bert-tensorizer" />
    </documents>
     <nodes>
      <node hostalias="node1" distribution-key="0" />
    </nodes>
    <engine>
      <proton>
        <tuning>
          <searchnode>
           <requestthreads>
            <persearch>10</persearch>
           </requestthreads>
           <feeding>
            <concurrency>1.0</concurrency>
          </feeding>
          </searchnode>
        </tuning>
      </proton>
    </engine>
  </content>
</services>
